<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity"
    android:background="@drawable/gradient_dark">


    <ImageView
        android:id="@+id/imgForgotPassword"
        android:layout_width="fill_parent"
        android:layout_height="137dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="102dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/soleuswhite"
        tools:ignore="ImageContrastCheck"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/linearForgotPassword"
        android:layout_width="353dp"
        android:layout_height="334dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/linearbg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgForgotPassword">

        <EditText
            android:id="@+id/editForgotPasswordUser"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="@string/user_editText"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="3"
            android:minHeight="48dp"
            android:textColor="@color/soleus_dark"
            tools:ignore="TextContrastCheck,TextFields" />

        <EditText
            android:id="@+id/editForgotPasswordName"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/name_editText"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="20"
            android:minHeight="48dp"
            android:textColor="@color/soleus_dark"
            tools:ignore="TextContrastCheck,TextFields" />

        <EditText
            android:id="@+id/editForgotPasswordPassword"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/modifyPassword_editText"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:maxLength="6"
            android:minHeight="48dp"
            android:textColor="@color/soleus_dark"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnForgotPasswordSend"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/modifyPassword_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>